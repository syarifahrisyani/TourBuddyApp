<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TourBuddyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_tea</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_apple</item>
        <item name="colorSecondaryVariant">@color/green_pastel</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

    </style>

    <style name="Theme.TourBuddyApp" parent="Base.Theme.TourBuddyApp" />

    <style name="Theme.TourBuddyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TourBuddyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TourBuddyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    // set fab
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>

    // set splash
    <style name="splash_screen" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

</resources>